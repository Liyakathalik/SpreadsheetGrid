<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SpreadsheetGrid.Wpf">

    <Style TargetType="{x:Type local:SpreadsheetGridControl}">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SpreadsheetGridControl}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">

                        <Grid>

                            <!-- CELLS -->
                            <ItemsControl x:Name="PART_Cells"
                                          Background="White"
                                          SnapsToDevicePixels="True"
                                          UseLayoutRounding="True">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid
                                            Rows="{Binding Rows, RelativeSource={RelativeSource TemplatedParent}}"
                                            Columns="{Binding Columns, RelativeSource={RelativeSource TemplatedParent}}"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <!-- NO CELL BORDERS -->
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- GRID LINES -->
                            <Canvas x:Name="PART_GridLines"
                                    IsHitTestVisible="False"/>

                            <!-- SELECTION -->
                            <Canvas x:Name="PART_Selection"
                                    IsHitTestVisible="False"/>

                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
